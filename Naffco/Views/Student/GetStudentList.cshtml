@model IEnumerable<Naffco.tblStudent>

<p>
    <a class="btn btn-danger" href="/Student/Create">Create Student</a>

</p>
<table class="table table-bordered">
    <tr class="text-center">
        <th>
            @Html.DisplayName("Student ID")
        </th>
        <th>
            @Html.DisplayName("Student Name")
        </th>
        <th>
            @Html.DisplayName("Mobile Number")
        </th>
        <th>
            @Html.DisplayName("City")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.StudentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  Studentid=item.StudentID },new { @class = "btn btn-danger"})   |

                    @Html.ActionLink("Delete", "Delete", new { Studentid = item.StudentID},new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    }
</table>
@if (TempData["result1"] != null)
{
    <script type="text/javascript">
        alert("Student Saved Successfully");
    </script>
}
@if (TempData["EditStudent"] != null)
{
    <script type="text/javascript">
        alert("Student Edited Successfully");
    </script>
}
@if (TempData["DeleteStudent"] != null)
{
    <script type="text/javascript">
        alert("Student Deleted Sucessfully")
    </script>
}